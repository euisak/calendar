extends base

block content
  header
    nav.navbar
      ul.nav-list
        li.nav-item
          a(href='/') 홈
        li.nav-item
          a(href='/shop') 쇼핑
        li.nav-item
          a(href='/challenge') 챌린지
        li.nav-item
          a(href='/community') 커뮤니티
      div.auth-links
        a(href='/login') 로그인
        a(href='/signup') 회원가입

  .calendar-container
    #calendar


  link(rel='stylesheet', href='/fullcalendar/main.css')
  link(rel='stylesheet', href='/style.css')
  script(src='/jquery/dist/jquery-3.7.1.min.js')
  script(src='/fullcalendar/main.js')
  script(src='/javascripts/main.js')

//-
  h2 Welcome here you will see the trending posts
  each post in posts
    div
      h4= post.title
      ul
        li #{post.rating}/5.
        li #{post.comments} comments.
        li Posted #{post.createdAt}.
        li #{post.views} views.
  else
    li Sorry nothing found.
